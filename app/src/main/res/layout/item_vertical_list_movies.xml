<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/main_elevation"
    android:layout_marginBottom="@dimen/main_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/example_poster_w92"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivMovie">

            <ImageButton
                android:id="@+id/btnFav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTittleMovie"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/lorem_ipsum"
                android:textSize="@dimen/material_text_title"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@id/btnFav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvReleaseDate"
                app:layout_constraintVertical_weight="2"/>

            <TextView
                android:id="@+id/tvReleaseDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="2019-09-06"
                android:textSize="@dimen/material_text_body1"
                app:layout_constraintVertical_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@id/tvTittleMovie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvGenre"
                app:layout_constraintVertical_weight="1"/>

            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/example_genre"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/material_text_caption"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvReleaseDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ratingBarKindOfMovie"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_weight="0.5"/>

            <RatingBar
                android:id="@+id/ratingBarKindOfMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3.5"
                android:stepSize="20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGenre"
                app:layout_constraintEnd_toStartOf="@id/tvTotalRating"/>

            <TextView
                android:id="@+id/tvTotalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="@dimen/material_text_body1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ratingBarKindOfMovie"
                app:layout_constraintBottom_toBottomOf="@id/ratingBarKindOfMovie"
                app:layout_constraintTop_toTopOf="@id/ratingBarKindOfMovie"/>

            <ImageView
                android:id="@+id/ivEye"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                android:tint="@android:color/darker_gray"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/tvVoteCount"
                app:layout_constraintTop_toTopOf="@id/tvTotalRating"
                app:layout_constraintBottom_toBottomOf="@id/tvTotalRating"/>

            <TextView
                android:id="@+id/tvVoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="552"
                android:textSize="@dimen/material_text_body1"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivEye"
                app:layout_constraintTop_toTopOf="@id/ivEye"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>